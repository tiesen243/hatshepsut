{
  "name": "hatshepsut",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "bun with-env concurrently -c=\"#646CFF,#777BB4\" \"bun run dev:vite\" \"bun run dev:php\" --names=vite,php",
    "dev:php": "php -S localhost:8000 -t public",
    "dev:vite": "vite",
    "format": "bun format:php && bun format:resources",
    "format:fix": "bun format:php:fix && bun format:resources:fix",
    "format:php": "bun with-env ./vendor/bin/php-cs-fixer check --using-cache yes --cache-file .cache/php-cs-fixer",
    "format:php:fix": "bun with-env ./vendor/bin/php-cs-fixer fix --using-cache yes --cache-file .cache/php-cs-fixer",
    "format:resources": "prettier --check resources --cache --cache-location .cache/prettier",
    "format:resources:fix": "prettier --check resources --write --cache --cache-location .cache/prettier",
    "start": "bun with-env php -S localhost:8000 -t public",
    "with-env": "dotenv -e .env --"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.90.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.2",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^10.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-blade": "^2.1.21",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
